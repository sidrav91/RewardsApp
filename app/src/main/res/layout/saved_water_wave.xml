<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.sew.rewardsapp.activity.MainActivity">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/image"
        android:background="@drawable/water_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/water_wave_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/abel"
        android:text="@string/water_wave_pre"
        android:textColor="@color/colorWhite"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/water_wave_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="khghg"
        android:textColor="@color/colorWhite"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:onClick="redeem"
        android:text="@string/redeem_now"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />
</RelativeLayout>